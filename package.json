  },
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/OunceTechnology/engine.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/OunceTechnology/engine/issues"
  },
  "homepage": "https://github.com/OunceTechnology/engine#readme",
  "dependencies": {
    "@fastify/formbody": "^8.0.2",
    "@fastify/helmet": "^13.0.1",
    "@fastify/multipart": "^9.0.3",
    "@fastify/sensible": "^6.0.3",
    "app-root-path": "^3.1.0",
    "asn1.js": "^5.4.1",
    "bcryptjs": "^3.0.2",
    "config": "^4.1.1",
    "email-templates": "^12.0.3",
    "fastify": "^5.5.0",
    "fastify-plugin": "^5.0.1",
    "mongodb": "^6.19.0",
    "nodemailer": "^7.0.5",
    "pino": "^9.9.0"
  },
  "devDependencies": {
    "eslint": "^9.34.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-unicorn": "^60.0.0"
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "plugin:unicorn/recommended"
    ],
    "env": {
      "browser": true
    },
    "rules": {
      "no-else-return": 1,
      "prefer-const": "error",
      "no-var": "error",
      "no-unused-vars": [
        "error",
        {
          "ignoreRestSiblings": true
        }
      ],
      "no-nested-ternary": "off",
      "unicorn/no-nested-ternary": [
        "off"
      ],
      "unicorn/prevent-abbreviations": [
        "error",
        {
          "replacements": {
            "props": false
          },
          "allowList": {
            "i18n": true
          }
        }
      ]
    }
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "bracketSpacing": true,
    "arrowParens": "avoid",
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "printWidth": 100
        }
      }
    ]
  }
}
